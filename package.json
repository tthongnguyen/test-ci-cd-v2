{
	"name": "vercel-ci-template",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check --write",
		"typecheck": "tsc --noEmit",
		"prepare": "husky",
		"test:ci": "jest --runInBand --detectOpenHandles --forceExit",
		"test": "jest",
		"test:coverage": "jest --coverage"
	},
	"dependencies": {
		"@sentry/nextjs": "^8.0.0",
		"next": "^14.2.12",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.3",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.2.12",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-junit": "^16.0.0",
		"lint-staged": "^16.1.6"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,cjs,mjs,json,md,css,scss}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
